{
  "name": "desktop-youtube",
  "version": "1.0.2",
  "author": "Bob Naydenov <bob.naydenov@hotmail.com>",
  "description": "An elegant desktop version of YouTube",
  "license": "GPL-3.0",
  "keywords": [
    "desktop",
    "app",
    "youtube",
    "videos",
    "games",
    "entertainment",
    "live",
    "music",
    "livestream",
    "comments",
    "share"
  ],
  "main": "./main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/B-0-B-B-Y/desktop-youtube.git"
  },
  "build": {
    "appId": "desktop.youtube",
    "productName": "YouTube Desktop",
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "app/build/icon.icns"
    },
    "win": {
      "target": "NSIS",
      "icon": "app/build/icon.ico"
    },
    "linux": {
      "category": "Network",
      "icon": "app/build/"
    }
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder -mlw",
    "dist-win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^6.0.1",
    "electron-builder": "^22.7.0",
    "electron-prebuilt": "^1.4.13"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.0.2",
    "cross-fetch": "^3.0.4",
    "electron-updater": "^2.21.4"
  }
}
