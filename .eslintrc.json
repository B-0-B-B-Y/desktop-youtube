{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": [2, "never"],
    "no-multiple-empty-lines": [2, {"max": 2, "maxEOF": 1, "maxBOF": 0}],
    "no-trailing-spaces": "error",
    "quotes": [2, "single", "avoid-escape"]
  }
}
